        <lvc:CartesianChart x:Name="ChartOne"  LegendLocation="Left" Margin="10,58,464,241">
            <lvc:CartesianChart.Series>

                <lvc:LineSeries Values="{Binding Temperature_Change_ChartValues}"/>
                <lvc:LineSeries Values="{Binding Height_Width_Wall_ChartValues}" StrokeDashArray="0" />

